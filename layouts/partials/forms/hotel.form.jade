form.form.col-lg-5.col-md-6.col-sm-7.col-xs-8(action="h.html")
	.row
		.col-lg-12.col-md-12.col-sm-12.col-xs-12
			label ¿A dónde quieres viajar?
			input#destino(type="text", name='d', autocomplete="off")
			input#citycode(type="hidden", value="", name="dc", autocomplete="off")

	.row
		.col-lg-12.col-md-12.col-sm-12.col-xs-12
			label Nombre del Hotel (Opcional)
			input#nh(type="text", name='nh', autocomplete="off")

	.row
		.col-lg-6.col-md-6.col-sm-6.col-xs-6
			label Entrada
		.col-lg-6.col-md-6.col-sm-6.col-xs-6
			label Salida

	.row.no-margin-top
		.col-lg-1.col-md-1.col-sm-1.col-xs-1
			i.fa.fa-calendar
		.col-lg-5.col-md-5.col-sm-5.col-xs-5
			input#startDate(name="sd", type="date", readonly="readonly", autocomplete="off", placeholder="Ingresa la fecha")
		.col-lg-1.col-md-1.col-sm-1.col-xs-1
			i.fa.fa-calendar
		.col-lg-5.col-md-5.col-sm-5.col-xs-5
			input#endDate(name="ed", type="date", readonly="readonly", autocomplete="off", placeholder="Ingresa la fecha")

	.row
		.col-lg-3.col-md-3.col-sm-3.col-xs-3
			label Habitaciones
			select#rooms(name="r")
				option 1
				option 2
				option 3
				option 4
				option 5
