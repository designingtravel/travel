	//- search button
	.row
		.col-lg-6.col-md-6.col-sm-6.col-xs-6
			input.btn.btn-primary(type="submit", value="Iniciar la Búsqueda")

	p.more-options
		a#show-brokers(href="#") + Opciones

	.brokers-relative
		#brokers.brokers
			p
				span Moneda:
				select#currency(name="currency")
					option Dólar Estadounidense
					option Euro
					option(selected) Peso Mexicano
			p
				input(type="checkbox")