	//- room 
	include ../modules/helpers/hotel/room5.jade

	#kidAges
		.row
			.col-lg-12.col-md-12.col-sm-12.col-xs-12
				p.no-margin-bottom Edades de los menores
				hr.hr

		//- age room 1
		include ../modules/helpers/hotel/ages1.jade

		//- age room 2
		include ../modules/helpers/hotel/ages2.jade

		//- age room 3
